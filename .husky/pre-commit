#!/usr/bin/env sh
# Husky pre-commit: run lint + typecheck
if [ "${HUSKY:-1}" = "0" ]; then
  exit 0
fi

echo "ğŸ” Running pre-commit checks..."

# Lint
echo "ğŸ“ Checking lint..."
pnpm lint || exit 1

# Typecheck
echo "ğŸ”· Checking types..."
pnpm typecheck || exit 1

echo "âœ… Pre-commit checks passed!"
